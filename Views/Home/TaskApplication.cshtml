@{
}

@model TaskResponse

<h1>@ViewData["Task Form"]</h1>

<div>
    <form method="post">
        <div asp-validation-summary="All"></div>


        <label asp-for="Task">Task: </label>
        <input asp-for="Task" /><br /><br />

        <label asp-for="DueDate">Due Date: </label>
        <input asp-for="DueDate" /><br /><br />

        <label asp-for="Quadrant">Quadrant: </label>
        <select asp-for="Quadrant">
            <option value=1>1</option>
            <option value=2>2</option>
            <option value=3>3</option>
            <option value=4>4</option>
        </select><br /><br />

        <label asp-for="Completed">Completed: </label>
        <select asp-for="Completed">
            <option value="True">Yes</option>
            <option value="False">No</option>
        </select><br /><br />

        
        <label asp-for="CategoryId">Category: </label>
        <select asp-for="CategoryId">
            <option value="">--Select a Category--</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select><br /><br />

        <input type="hidden" asp-for="TaskId" />

        <button type="submit">Submit Task</button>
    </form>
</div>